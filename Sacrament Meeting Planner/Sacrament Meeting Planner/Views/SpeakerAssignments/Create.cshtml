@model SacrementPlanner.Models.SpeakerAssignment

@{
    ViewData["Title"] = "Create";
}

<h1>Add Speaker</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MeetingID" class="disabled" />
            @*<div class="form-group">
                    <label asp-for="MeetingID" class="control-label"></label>
                    <text asp-for="MeetingID" class="form-control" asp-items="@ViewBag.MeetingID"></text>
                </div>*@
            <div class="form-group">
                <label asp-for="SpeakerName" class="control-label"></label>
                <input asp-for="SpeakerName" class="form-control" />
                <span asp-validation-for="SpeakerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpeakerTopic" class="control-label"></label>
                <input asp-for="SpeakerTopic" class="form-control" />
                <span asp-validation-for="SpeakerTopic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="SpeakerAssignments" asp-action="Index" asp-route-id="@Model.MeetingID">Back to Speaker List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
