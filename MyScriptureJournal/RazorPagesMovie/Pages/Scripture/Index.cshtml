@page
@model My_Scripture_Journal.Pages.Scriptures.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div class="spaceBetween">
    <p>
        <a asp-page="Create">Create New</a>
    </p>
    <form>
        <p>
            <select asp-for="ScriptureBook" asp-items="Model.Books">
                <option value="">All</option>
            </select>
            Note: <input type="text" asp-for="SearchString" />
            <input type="submit" value="Filter" />
        </p>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.BookSort">Scripture</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].Note)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort">@Html.DisplayNameFor(model => model.Scripture[0].DateAdded)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Scripture)
        {
        <tr>
            <td>
                @item.GetScriptureAddress()
            </td>
            <!--<td>
                //@Html.DisplayFor(modelItem => item.Chapter)
            </td>
            <td>
                //@Html.DisplayFor(modelItem => item.Verse)
            </td>-->
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <!--
            <td>
                //@Html.DisplayFor(modelItem => item.Passage)
            </td>-->
            <td>
                @Html.DisplayFor(modelItem => item.DateAdded)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>