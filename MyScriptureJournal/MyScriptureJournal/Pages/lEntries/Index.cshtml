@page "{id:int?}"
@model My_Scripture_Journal.Pages.Entries.MultiSelectList

@{
    ViewData["Title"] = "Desk Orders";
}

<script language="C#" runat="server">
    void LinkButton_Click(Object sender, EventArgs e)
    {
      Label1.Text = "Hello!";
    }
</script>
<h1>Desk Orders</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>

        <select asp-for="EntryBook" asp-items="Model.Books"></select>
        Search Notes: <input type="text" asp-for="SearchString" />
        Search By Book: <input type="text" asp-for="BookSearchString" />
        <input type="submit" value="Filter" />



    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>

                @Html.DisplayNameFor(model => model.Entry[0].StandardWork)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.BookSort">
                    @Html.DisplayNameFor(model => model.Entry[0].Book)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entry[0].Chapter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entry[0].Note)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entry[0].Verses)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entry[0].Passage)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort">
                    @Html.DisplayNameFor(model => model.Entry[0].DatePosted)
                </a>
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.entryToPage)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StandardWork)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Book)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Chapter)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Verses)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Passage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DatePosted)
                </td>

                <td>

                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="#" runat="server" onServerClick="LinkButton_Click">Click Me!</a>
<p>Page @Model.pageNo of @Model.NoOfPages</p>
<asp:Label id="Label1" runat="server" />